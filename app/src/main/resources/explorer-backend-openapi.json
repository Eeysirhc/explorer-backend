  "components": {
    "schemas": {
      "AddressInfo": {
        "required": [
          "balance",
          "txNumber"
        ],
        "type": "object",
        "properties": {
          "balance": {
            "type": "integer",
            "format": "uint256"
          },
          "txNumber": {
            "type": "integer"
          }
        }
      },
      "BadRequest": {
        "required": [
          "detail"
        ],
        "type": "object",
        "properties": {
          "detail": {
            "type": "string"
          }
        }
      },
      "Input": {
        "required": [
          "outputRef",
          "txHashRef",
          "address",
          "amount"
        ],
        "type": "object",
        "properties": {
          "outputRef": {
            "$ref": "#/components/schemas/Ref"
          },
          "unlockScript": {
            "type": "string"
          },
          "txHashRef": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "amount": {
            "type": "integer",
            "format": "uint256"
          }
        }
      },
      "InternalServerError": {
        "required": [
          "detail"
        ],
        "type": "object",
        "properties": {
          "detail": {
            "type": "string"
          }
        }
      },
      "ListBlocks": {
        "required": [
          "total"
        ],
        "type": "object",
        "properties": {
          "total": {
            "type": "integer"
          },
          "blocks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Lite"
            }
          }
        }
      },
      "Lite": {
        "required": [
          "hash",
          "timestamp",
          "chainFrom",
          "chainTo",
          "height",
          "txNumber",
          "mainChain"
        ],
        "type": "object",
        "properties": {
          "hash": {
            "type": "string"
          },
          "timestamp": {
            "type": "integer",
            "format": "int64"
          },
          "chainFrom": {
            "type": "integer"
          },
          "chainTo": {
            "type": "integer"
          },
          "height": {
            "type": "integer"
          },
          "txNumber": {
            "type": "integer"
          },
          "mainChain": {
            "type": "boolean"
          }
        }
      },
      "NotFound": {
        "required": [
          "detail",
          "resource"
        ],
        "type": "object",
        "properties": {
          "detail": {
            "type": "string"
          },
          "resource": {
            "type": "string"
          }
        }
      },
      "Output": {
        "required": [
          "amount",
          "address"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "type": "integer",
            "format": "uint256"
          },
          "address": {
            "type": "string"
          },
          "lockTime": {
            "type": "integer",
            "format": "int64"
          },
          "spent": {
            "type": "string"
          }
        }
      },
      "Ref": {
        "required": [
          "scriptHint",
          "key"
        ],
        "type": "object",
        "properties": {
          "scriptHint": {
            "type": "integer"
          },
          "key": {
            "type": "string"
          }
        }
      },
      "ServiceUnavailable": {
        "required": [
          "detail"
        ],
        "type": "object",
        "properties": {
          "detail": {
            "type": "string"
          }
        }
      },
      "Transaction": {
        "required": [
          "hash",
          "blockHash",
          "timestamp",
          "startGas",
          "gasPrice"
        ],
        "type": "object",
        "properties": {
          "hash": {
            "type": "string"
          },
          "blockHash": {
            "type": "string"
          },
          "timestamp": {
            "type": "integer",
            "format": "int64"
          },
          "inputs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Input"
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Output"
            }
          },
          "startGas": {
            "type": "integer"
          },
          "gasPrice": {
            "type": "integer",
            "format": "uint256"
          }
        }
      },
      "TransactionLike": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/Transaction"
          },
          {
            "$ref": "#/components/schemas/UTransaction"
          }
        ]
      },
      "UInput": {
        "required": [
          "outputRef"
        ],
        "type": "object",
        "properties": {
          "outputRef": {
            "$ref": "#/components/schemas/Ref"
          },
          "unlockScript": {
            "type": "string"
          }
        }
      },
      "UOutput": {
        "required": [
          "amount",
          "address"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "type": "integer",
            "format": "uint256"
          },
          "address": {
            "type": "string"
          },
          "lockTime": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "UTransaction": {
        "required": [
          "hash",
          "chainFrom",
          "chainTo",
          "startGas",
          "gasPrice"
        ],
        "type": "object",
        "properties": {
          "hash": {
            "type": "string"
          },
          "chainFrom": {
            "type": "integer"
          },
          "chainTo": {
            "type": "integer"
          },
          "inputs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UInput"
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UOutput"
            }
          },
          "startGas": {
            "type": "integer"
          },
          "gasPrice": {
            "type": "integer",
            "format": "uint256"
          }
        }
      },
      "Unauthorized": {
        "required": [
          "detail"
        ],
        "type": "object",
        "properties": {
          "detail": {
            "type": "string"
          }
        }
      }
    }
  }
